@using Gouro.WebApp.MVC.Extensions
@model PagedViewModel<ProdutoViewModel>

@{
    ViewData["Title"] = "Todos os produtos";
}

<section>
    <div>
        <div style="background-image: url(images/banners/Template.jpg); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div style="text-align: right; height: 300px; color: #e08039; padding: 100px 70px 0 0;">
                <h1>Grupo Grão de Ouro</h1>
            </div>
        </div>
        <div class="container" style=" padding-top: 20px">
            <div class="row">
                @{
                    foreach (var produto in Model.List.Where(p => p.Ativo).OrderBy(p => p.Nome))
                    {
                        <div class="col-md-3">
                            <div href="#" class="card card-product-grid">
                                <a asp-controller="Catalogo" asp-action="ProdutoDetalhe" asp-route-id="@produto.Id" class="img-wrap">
                                    <img src="~/images/produtos/@produto.Imagem" alt="@produto.Nome">
                                </a>
                                <figcaption class="info-wrap">
                                    <a asp-controller="Catalogo" asp-action="ProdutoDetalhe" asp-route-id="@produto.Id" class="title">
                                        <b> @produto.Nome</b>
                                    </a>

                                    <small class="card-text">
                                        @this.MensagemEstoque(produto.QuantidadeEstoque)<br /><br />
                                        @produto.Descricao
                                    </small>
                                </figcaption>
                                <div class="card-footer price mt-1">
                                    <h3>@this.FormatoMoeda(produto.Valor)</h3>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <nav>
                <ul class="pagination justify-content-center">
                    @{
                        if (@Model.PageIndex < 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Anterior</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-ps="@Model.PageSize" asp-route-page="@(Model.PageIndex - 1)" asp-route-q="@Model.Query">Anterior</a>
                            </li>
                        }
                        for (var i = 1; i < Model.TotalPages + 1; i++)
                        {
                            if (i == Model.PageIndex)
                            {
                                <li class="page-item active">
                                    <span class="page-link">@i</span>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-ps="@Model.PageSize" asp-route-page="@i" asp-route-q="@Model.Query">@i</a>
                                </li>
                            }
                        }
                        if (@Model.PageIndex >= Model.TotalPages)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">Próxima</span>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-ps="@Model.PageSize" asp-route-page="@(Model.PageIndex + 1)" asp-route-q="@Model.Query">Próxima</a>
                            </li>
                        }
                    }
                </ul>
            </nav>

        </div>
    </div>
</section>